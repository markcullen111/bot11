# Environment variables for Crypto Trading Bot

# Trading bot mode (paper or live)
TRADING_BOT_MODE=paper

# Debug mode (set to 1 to enable)
TRADING_BOT_DEBUG=0

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
TRADING_BOT_LOG_LEVEL=INFO

# Exchange API credentials (required for live trading)
# WARNING: Never commit your actual API keys to version control!
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# MLflow configuration
MLFLOW_TRACKING_URI=http://localhost:5000

# Selected strategies (comma-separated)
TRADING_BOT_STRATEGIES=rsi,macd,bollinger

# Database connection (optional)
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname 